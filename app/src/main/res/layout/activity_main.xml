<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Exibição do Saldo -->
    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Saldo:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Exibição do Endereço -->
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin Address:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Generating address..."
        android:textSize="16sp" />

    <!-- Exibição da Chave Privada -->
    <TextView
        android:id="@+id/privateKeyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Private Key (WIF):"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/privateKeyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Generating private key..."
        android:textSize="16sp" />

    <!-- Botão para criar a carteira -->
    <Button
        android:id="@+id/createWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create/Load Wallet" />

    <Button
        android:id="@+id/openGraphButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Open Bitcoin Graph" />
</LinearLayout>
