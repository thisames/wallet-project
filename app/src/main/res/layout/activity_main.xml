<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Área de Exibição do Saldo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 BTC"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Conteúdo principal com padding nas extremidades -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Exibição do Endereço -->
        <TextView
            android:id="@+id/addressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bitcoin Address:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Generating address..."
            android:textSize="16sp" />

        <!-- Exibição da Chave Privada -->
        <TextView
            android:id="@+id/privateKeyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Private Key (WIF):"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privateKeyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Generating private key..."
            android:textSize="16sp" />

        <!-- Botão para criar a carteira -->
        <Button
            android:id="@+id/createWalletButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#00BCD4"
            android:text="Create/Load Wallet"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/openGraphButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#00BCD4"
            android:text="Open Bitcoin Graph"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
